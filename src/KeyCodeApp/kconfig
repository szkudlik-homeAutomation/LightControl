config KEY_CODE_APP
    bool "compile KeyCode application"
    default n
    select SENSORS
    select WIEGAND_SENSOR
    select TLE8457_COMM_LIB
   
config KEY_CODE_TABLE_SIZE
	int "max number of keycodes in the table"
	depends on KEY_CODE_APP
	default 100
	
config KEYCODE_TIMEOUT 
	int "Timeout in ms for timeout in entering digits" 
    default 2500
	depends on KEY_CODE_APP

config KEYCODE_MAX_DIGITS
	int "Max number of digits in the code"
	default 4
	depends on KEY_CODE_APP

config KEYCODE_WINEGRAND_SENSOR_ID
	int "ID of a sensor reading the data from keypad"
	default 1
	depends on KEY_CODE_APP
	help
		should be set to an unique ID in the system, 
		set it in a global config

config KEY_CODE_APP_TELNET_COMMANDS
	bool "enable telnet commands for remote keycode application control"
    default n
    select TLE8457_COMM_LIB
    select TELNET_SERVER
    select NETWORK
