######### debug loggers
CONFIG_LOGGER=y
CONFIG_LOGLEVEL_3=y
CONFIG_LOGLEVEL_1=n
CONFIG_LOGLEVEL_2=n
CONFIG_LOGGER_TRANSPORT_SERIAL=y
CONFIG_LOGGER_SERIAL_PORT_1=y
CONFIG_LOGGER_TRANSPORT_SPEED=115200

######### communication configuration for Arduino mega board
CONFIG_TLE8457_SERIAL_PORT_2=y
CONFIG_TLE8457_COMM_DEV_ID_FROM_EEPROM=n 
CONFIG_TLE8457_COMM_FORCE_DEV_ID=1 
CONFIG_OUTPUT_QUEUE_SIZE=140

######### TCP/IP networking
CONFIG_NETWORK=y
CONFIG_TCP_WATCHDOG=y
CONFIG_TCP_WATCHDOG_TIMEOUT=600
CONFIG_IP_ADDRESES_FROM_EEPROM=y
CONFIG_TELNET_SERVER=y
# telnet control of keycode app
CONFIG_KEY_CODE_APP_TELNET_COMMANDS=y

CONFIG_HTTP_SERVER=y
CONFIG_HTTP_SERVER_INSTANCE=n
# HTTP control of Ouputs on all nodes
CONFIG_OUTPUT_CONTROL_SERVLET=y
CONFIG_OUTPUT_CONTROL_SERVLET_USE_TLE8457_SERIAL=y

######### worker tasks
CONFIG_WORKER_PROCESS=y
CONFIG_NODE_SCAN_TASK=y
CONFIG_NODE_SCAN_EEPROM_STATUS_TASK=y

######### output process, pins for Arduino mega board
CONFIG_OUTPUT_PROCESS=y
CONFIG_OUTPUT_PROCESS_NUM_OF_PINS=8
CONFIG_OUTPUT_PROCESS_INSTANCE=n
CONFIG_OUTPUT_PROCESS_PIN0=28
CONFIG_OUTPUT_PROCESS_PIN1=29
CONFIG_OUTPUT_PROCESS_PIN2=30
CONFIG_OUTPUT_PROCESS_PIN3=31
CONFIG_OUTPUT_PROCESS_PIN4=32
CONFIG_OUTPUT_PROCESS_PIN5=33
CONFIG_OUTPUT_PROCESS_PIN6=34
CONFIG_OUTPUT_PROCESS_PIN7=255

######### no input process for Arduino mega board
# note! not needed in my application, may be enabled if needed
CONFIG_INPUT_PROCESS=n

######### the main application, light control
CONFIG_LIGHT_CONTROL_APP=y
CONFIG_LIGHT_CONTROL_EEPROM_OUTPUTS_POLARITY=n
CONFIG_LIGHT_CONTROL_LOG_INCOMING_EVENTS=y
CONFIG_LIGHT_CONTROL_ACTION_TABLE_SIZE=139
CONFIG_LIGHT_CONTROL_CENTRAL_NODE=y
# HTTP and telnet control for the app
CONFIG_LIGHT_CONTROL_APP_HTTP_SERVLETS=y
CONFIG_LIGHT_CONTROL_APP_TELNET_COMMANDS=y

######### sensors
CONFIG_SENSORS=y
CONFIG_SENSORS_FACTORY=y
CONFIG_SENSORS_FACTORY_INSTANCE=y
CONFIG_SYSTEM_STATUS_SENSOR=y
# sensors events are not used on the central node
CONFIG_SENSOR_DONT_GENERATE_EVENTS=y

# on central node no events need to be sent to other nodes
CONFIG_SENSOR_SEND_EVENTS_USING_SERIAL=n
CONFIG_SENSORS_STORE_IN_EEPROM=n
# sensor hub capable of recieving messages from remote sensors
CONFIG_SENSOR_HUB=y
CONFIG_SENSOR_HUB_FOR_REMOTE_SENSORS=y
CONFIG_SENSOR_HUB_AUTONAME_PREFIX="SystemStatus"
# JSON output for sensors
CONFIG_HTTP_SEVLETS_SENSORS=y
CONFIG_SENSORS_JSON_OUTPUT=y

# control of sensors from central node
CONFIG_SENSORS_CONTROL_NODE=y
CONFIG_SENSORS_CONTROL_NODE_CONTROL_REMOTE_SENSORS=y
CONFIG_TELNET_COMMANDS_SENSORS=y
# no advanced control of sensors
CONFIG_TELNET_COMMANDS_SENSORS_EEPROM_CONTROL=n
CONFIG_TELNET_COMMANDS_SENSORS_REMOTE_CONTROL=n

